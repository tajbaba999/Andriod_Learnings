<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainActivity">

    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.navigationbar.SecondFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_second" />
    <navigation android:id="@+id/navigation3"
        app:startDestination="@id/mainActivity">
        <action
            android:id="@+id/action_global_secondFragment2"
            app:destination="@id/secondFragment" />
        <fragment
            android:id="@+id/secondFragmen"
            android:name="com.example.navigationbar.SecondFragmen"
            android:label="fragment_second2"
            tools:layout="@layout/fragment_second2" >
            <action
                android:id="@+id/action_secondFragmen_to_mainActivity"
                app:destination="@id/navigation4" />
        </fragment>
        <navigation android:id="@+id/navigation4"
            app:startDestination="@id/mainActivity">
            <activity
                android:id="@+id/mainActivity"
                android:name="com.example.navigationbar.MainActivity"
                android:label="activity_main"
                tools:layout="@layout/activity_main" />
            <action
                android:id="@+id/action_global_secondFragmen"
                app:destination="@id/secondFragmen" />
        </navigation>
    </navigation>
</navigation>